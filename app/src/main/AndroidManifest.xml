<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appsenkaspi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AppSenkaspi"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSenkasPI">

        <!-- Tela de Login -->
        <activity
            android:name=".MainActivity"
            android:exported="true">  <!-- ADICIONADO aqui -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela Principal (depois do login) -->
        <activity
            android:name=".TelaPrincipalActivity"
            android:exported="false" />  <!-- Não precisa de intent-filter, então pode ser false -->

    </application>

</manifest>
