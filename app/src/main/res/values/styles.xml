<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#164773</item>
        <item name="colorPrimaryVariant">#0F355A</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LoginDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomNavActiveIndicator">
        <item name="android:color">#3CA6A6</item>
        <item name="android:shape">rectangle</item>
        <item name="android:height">4dp</item>
    </style>

    <style name="BotaoPrimario" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CustomFilledBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/cardNormal</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@android:color/transparent</item>
    </style>

  <style name="ProfileImageShape" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>


</resources>




