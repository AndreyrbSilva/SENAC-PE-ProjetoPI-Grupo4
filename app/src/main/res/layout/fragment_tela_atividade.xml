<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <!-- Header -->
        <include
            android:id="@+id/header"
            layout="@layout/view_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Título -->
        <FrameLayout
            android:id="@+id/headerNovaAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E4B78"
            android:padding="12dp">

            <TextView
                android:id="@+id/tituloAtividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Identificação dos Riscos"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Conteúdo -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <!-- Descrição -->
                <LinearLayout
                    android:id="@+id/areaDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_text"
                        android:layout_marginEnd="8dp"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/descricaoAtividade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Descrição detalhada da atividade."
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Linha divisória -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#444444" />

                <!-- Prioridade -->
                <LinearLayout
                    android:id="@+id/layoutPrioridade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iconPrioridade"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_priority"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/textPrioridade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prioridade Alta"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Responsáveis -->
                <LinearLayout
                    android:id="@+id/areaResponsaveis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_card">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:id="@+id/containerResponsaveis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Datas -->
                <LinearLayout
                    android:id="@+id/areaDatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock"
                            android:layout_marginEnd="8dp"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/textDataInicio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data de início: ..."
                            android:textColor="#CCCCCC"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="8dp"
                        android:background="#444444" />

                    <TextView
                        android:id="@+id/textDataPrazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prazo até: ..."
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginStart="28dp" />
                </LinearLayout>

                <!-- Checklist -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="8dp" />

                <!-- Botões de ação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="8dp">

                    <!-- Botão Editar -->
                    <FrameLayout
                        android:id="@+id/btnEditar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_confirmar"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="6dp"
                        android:visibility="gone"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/textBtnEditar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Editar atividade"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />
                    </FrameLayout>

                    <!-- Botão Deletar -->
                    <FrameLayout
                        android:id="@+id/btnDeletar"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_red"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        android:elevation="6dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/textBtnDeletar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Deletar"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Botão Confirmar -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardConfirmarAtividade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/ripple_card"
                    android:backgroundTint="#1A62A4"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Confirmar Conclusão"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>

                <!-- Botão Pedir Confirmação -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPedirConfirmacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/ripple_card"
                    android:backgroundTint="#1A62A4"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Pedir confirmação da atividade"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
