<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".TelaPilarFragment">

    <!-- TopBar -->
    <include
        android:id="@+id/topBar"
        layout="@layout/view_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->

    <!-- Pilar 1 (Verde) -->

    <!-- Pilar 2 (Vermelho) -->

    <FrameLayout
        android:id="@+id/headerLayoutPilar1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="258dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPilar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sustentablidade"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewLaranja"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:src="@drawable/blaranja"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textOverlayVencido"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Vencido"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/textDetalhes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluido em 30/04/2024"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/textPilar3"
                tools:layout_editor_absoluteX="-1dp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:layout_marginTop="66dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rounded_buttonc"
                tools:layout_editor_absoluteX="211dp" />

            <TextView
                android:id="@+id/textVerMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ver mais"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView16"
                app:layout_constraintEnd_toEndOf="@id/imageView16"
                app:layout_constraintStart_toStartOf="@id/imageView16"
                app:layout_constraintTop_toTopOf="@id/imageView16" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/headerLayoutPilar2"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="@drawable/box"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutPilar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPilar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saude"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewVermelho"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:src="@drawable/bvermelho"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textOverlayExcluido"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Excluído"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageViewVermelho"
                app:layout_constraintEnd_toEndOf="@id/imageViewVermelho"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imageViewVermelho"
                app:layout_constraintTop_toTopOf="@id/imageViewVermelho"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textDetalhes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluido em: 02/05/2012"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="28dp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="136dp"
                android:layout_height="29dp"
                app:srcCompat="@drawable/rounded_buttonc"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="66dp" />

            <TextView
                android:id="@+id/textVerMais16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ver mais"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView16"
                app:layout_constraintEnd_toEndOf="@id/imageView16"
                app:layout_constraintStart_toStartOf="@id/imageView16"
                app:layout_constraintTop_toTopOf="@id/imageView16" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Pilar 3 (Laranja) -->
    <FrameLayout
        android:id="@+id/headerLayoutPilar3"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="@drawable/box"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutPilar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPilar1"
                android:layout_width="107dp"
                android:layout_height="31dp"
                android:text="Normas"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewVerde"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:src="@drawable/bverde"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textOverlayConcluido"
                android:layout_width="84dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Concluído"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/imageViewVerde"
                app:layout_constraintTop_toTopOf="@id/imageViewVerde" />


            <TextView
                android:id="@+id/textDetalhes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluido em: 10/05/2011"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="31dp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="136dp"
                android:layout_height="29dp"
                app:srcCompat="@drawable/rounded_buttonc"
                tools:layout_editor_absoluteX="214dp"
                tools:layout_editor_absoluteY="66dp" />

            <TextView
                android:id="@+id/textVerMais16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ver mais"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView16"
                app:layout_constraintEnd_toEndOf="@id/imageView16"
                app:layout_constraintStart_toStartOf="@id/imageView16"
                app:layout_constraintTop_toTopOf="@id/imageView16" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <Button
        android:id="@+id/buttonPickDateAcao"
        android:layout_width="232dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_button_calendar"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Data de exclusão"
        android:textColor="#CCCCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico de Pilares"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
