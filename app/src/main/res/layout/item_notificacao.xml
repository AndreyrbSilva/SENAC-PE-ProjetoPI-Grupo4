<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerNotificacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="6dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_notificacao_estilizado">

    <!-- Ícone de status -->
    <ImageView
        android:id="@+id/iconStatus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_help"
        app:tint="@android:color/darker_gray" />

    <!-- Conteúdo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título dinâmico"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textoMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem descritiva da requisição"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Checkbox estilizada -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxSelecionar"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:buttonTint="@color/checkbox_selector"
        android:visibility="gone"
        android:background="@drawable/bg_checkbox_estilizado" />
</LinearLayout>
