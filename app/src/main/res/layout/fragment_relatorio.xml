<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".RelatorioFragment">

    <include
        android:id="@+id/topBarRelatorio"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRelatorioGeral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Relatório Geral"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBarRelatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnRelatorioPorPilar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Relatório por Pilar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRelatorioGeral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textSelecionarPilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o Pilar:"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btnRelatorioPorPilar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerPilares"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textSelecionarPilar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Gerar Relatório PDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerPilares" />

    <Button
        android:id="@+id/btnExcel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gerar Relatório Excel"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnWord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gerar Relatório Word"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnExcel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>