<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="16dp"
  android:background="@android:color/transparent">

  <!-- Cargo -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="8dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_work"
      android:contentDescription="Ícone de trabalho" />

    <TextView
      android:id="@+id/textCargo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Coordenador na empresa SENAC"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:layout_marginStart="12dp"
      android:gravity="start" />
  </LinearLayout>

  <!-- Email -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="8dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_email"
      android:contentDescription="Ícone de email" />

    <TextView
      android:id="@+id/textEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="exampleemail@gmail.com"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:layout_marginStart="12dp"
      android:gravity="start" />
  </LinearLayout>

  <!-- Telefone -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_phone"
      android:contentDescription="Ícone de telefone" />

    <TextView
      android:id="@+id/textTelefone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="+55 (81) 9 4002-8922"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      android:layout_marginStart="12dp"
      android:gravity="start" />
  </LinearLayout>

</LinearLayout>
